#!/bin/bash
set -euo pipefail

PACKAGES=(
  build-essential
  bzr
  curl
  file
  g++
  gawk
  gettext
  git
  jq
  libncurses5-dev
  libssl-dev
  libxml-parser-perl
  man-db
  python
  python3
  rsync
  signify-openbsd
  subversion
  time
  unzip
  wget
  xz-utils
  zip
  zlib1g-dev
)

apt-get install -y "${PACKAGES[@]}"
